<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
            android:text="@string/kernel_log_tracking_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32sp" />

    <TextView
        android:id="@+id/kern_service_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/service_not_running"
        android:textSize="32sp"
        android:gravity="center"
        android:textColor="@color/red" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">


    <Button
        android:id="@+id/kern_service_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        android:layout_weight="1"
    />

    <Button
        android:id="@+id/kern_service_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_service"
        android:layout_weight="1"
    />
  </LinearLayout>

  <TextView
          android:text="@string/jni_log_tracking_service"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:textSize="32sp"
          android:layout_marginTop="30dp"
  />

  <TextView
          android:id="@+id/jni_service_status"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/service_not_running"
          android:textSize="32sp"
          android:gravity="center"
          android:textColor="@color/red" />

  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">


      <Button
              android:id="@+id/jni_service_start"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/start_service"
              android:layout_weight="1"
      />

      <Button
              android:id="@+id/jni_service_stop"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/stop_service"
              android:layout_weight="1"
      />

  </LinearLayout>
</LinearLayout>
